<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <% include ./partials/header %>
    <title>Login Page!</title>
</head>

<body>
    <div class="container">
        <div class="text-center">
            <h1>Login Page</h1>
        </div>
        <% if(flash_message.length >0) { %>
        <div class="alert alert-danger" role="alert">
            <%= flash_message %>
        </div>
        <% } %>
        <div>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" href="/">Home</a>
                        <a class="nav-item nav-link" href="./contactus">Contact Us</a>
                    </div>
                </div>
            </nav>
        </div>
        <form action="/chatroom" method="POST">
            <div class="col-sm-3 my-1" id="horizontalAlign">
                <label for="roomName"></label>
                <input type="text" class="form-control" name="roomName" id="roomName" placeholder="Enter Room Name" required>
            </div>
            <div class="col-sm-3 my-1" id="horizontalAlign">
                <label for="roomImage">Image</label>
                <input type="text" class="form-control" name="roomImage" id="roomImage" placeholder="Enter image URL"
                    required>
            </div>
            <div class="text-center" id="horizontalAlign">
                <button type="submit" class="btn btn-outline-info">Submit</button>
            </div>
        </form>
    </div>
    <%  include ./partials/scripts %>
</body>

</html>