<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <% include ./partials/header %>
    <title>Upload Image Page!</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/profile">
            <img src="../public/images/<%=user.photoURL%>" width="30" height="30" class="d-inline-block align-top" alt="">
            <%= user.username %>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="welcome">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Request List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Friends</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="logout">Sign Out</a>
                </li>
            </ul>
        </div>
    </nav>
    <% if(flash_message.length >0) { %>
    <div class="alert alert-danger" role="alert">
        <%= flash_message %>
    </div>
    <% } %>
    <div class="container">
        <div class="text-center">
            <h1>Upload Image Page</h1>
        </div>
        <div class="text-center">
            <form action="/uploadImage" method="POST" enctype="multipart/form-data">
                <input type="file" name="imageButton"><br>
                <button type="submit" class="btn btn-outline-info">Upload</button>
            </form>
        </div>
    </div>
    <%  include ./partials/scripts %>
</body>

</html>