<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <% include ./partials/header %>
    <title>Welcome Page!</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/profile">
            <img src="../public/images/<%=user.photoURL%>" width="30" height="30"
                class="d-inline-block align-top" alt="">
            <%= user.username %>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="welcome">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Request List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Friends</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="logout">Sign Out</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container chatrooms">
        <div class="row">
            <div class="col-2" id="chatList">
                <div>
                    <% if(chatRooms) { %>
                    <ul class="listRooms">
                        <% for(const chatRoom of chatRooms) { %>
                        <li class="roomCol">
                            <button class="switch">
                                <img class="img-responsive" src="<%= chatRoom.photoURL %>" alt="room thumbnail"
                                    height="50" width="50">
                            </button>
                        </li>
                        <% } %>
                    </ul>
                    <% } %>
                    <a id="addChatroom" href="/chatroom"><i class="fas fa-plus-circle"></i></a>
                </div>
            </div>
            <div class="col-9" id="chatLayout">
                <div>
                    <!-- this div will be used to show all message contents -->
                </div>
                <div class="chatroomInputs">
                    <!-- this div will have input fields fixed to the bottom -->
                    <textarea id="message" name="message" rows="2" placeholder="Comment"
                        onkeypress="return checkKey(event);"></textarea>
                    <div id="chatOptionsContainer">
                        <a href="#" name="chatOptions" id="chatOptions" role="button"><i class="fas fa-plus-circle"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <script>
            $(".switch").on('click', function () {
                $("#chatLayout").toggle();
            });

            function checkKey(event) {
                let allowNormalKeyFunction = true;
                if (!event.shiftKey && event.code == "Enter") {
                    //send message here?
                    allowNormalKeyFunction = false;
                }
                return allowNormalKeyFunction;
            }
        </script>

        <%  include ./partials/scripts %>
</body>

</html>