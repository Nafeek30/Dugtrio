<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <% include ./partials/header %>
    <title>Welcome Page!</title>
</head>

<body onload="setupMessages();">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/profile">
            <img src="../public/images/<%=user.photoURL%>" width="30" height="30"
                class="circlePhoto d-inline-block align-top" alt="">
            <%= user.username %>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/welcome">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Request List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Friends</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Sign Out</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container chatrooms">
        <div class="row">
            <div class="col-2" id="chatList">
                <div>
                    <% if(chatRooms) { %>
                    <ul class="listRooms">
                        <% for(const chatRoom of chatRooms) { %>
                        <li class="roomCol">
                            <button class="switch">
                                <a href="/welcome/<%=chatRoom._id%>">
                                    <img class="circlePhoto img-responsive" src="<%= chatRoom.photoURL %>"
                                        alt="<%=chatRoom.name%>" height="50" width="50">
                                </a>
                            </button>
                        </li>
                        <% } %>
                    </ul>
                    <% } %>
                    <a id="addChatroom" href="/chatroom/"><i class="fas fa-plus-circle"></i></a>
                </div>
            </div>
            <div class="col-9" id="chatLayout" <%if(typeof(openChatRoom) === 'undefined'){%> hidden <%}%>>
                <div id="messagesContainer">
                <%if(typeof(openChatRoom) !== 'undefined'){%> <%if(typeof(messages) !== 'undefined'){
                    for(const message of messages){%> 
                        <div class="message">
                            <div class="userInfo">
                                <img src="/public/images/<%=user.photoURL%>" width="30" height="30"
                                    class="circlePhoto">
                                    <small><%=message.username%></small>
                            </div>
                            <div class="messageInfo">
                                <small><%=utility.getDateTime(message.timestamp)%></small>
                                <p><%=message.text%></p>
                            </div>
                        </div><br>
                    <%}
                }%>
        </div>
        <form method="POST" id="messageSender" action='/welcome/<%=openChatRoom._id%>'>
            <div class="chatroomInputs">
                <!-- this div will have input fields fixed to the bottom -->
                <textarea id="messageBox" name="message" rows="2" placeholder="Comment"
                    onkeypress="return checkKey(event);" autofocus></textarea>
                <div id="chatOptionsContainer">
                    <div class="btn-group dropup">
                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        </button>
                        <div class="dropdown-menu">
                            <!-- Dropdown menu links -->
                            <a class="dropdown-item" href="#">Insert Friend</a>
                            <a class="dropdown-item">Voice Call</a>
                            <a class="dropdown-item" onclick="myFunction()">Video Call</a>
                            <a class="dropdown-item" href="#">File</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <%}%>
            </div>
        </div>
    </div>

    <script>
        function setupMessages() {
            let messagesContainer = document.getElementById('messagesContainer');
            if (messagesContainer) {
                //auto scroll to most recent message
                //https://www.codeproject.com/Questions/632251/How-to-make-div-scroll-to-bottom-on-load
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }
        }

        function checkKey(event) {
            let allowNormalKeyFunction = true;
            if (!event.shiftKey && event.code == 'Enter') {
                allowNormalKeyFunction = false;
                document.getElementById('messageSender').submit();
            }
            return allowNormalKeyFunction;
        }

        function myFunction() {
            var myWindow = window.open("", "", "width=500,height=500");
        }
    </script>

    <%  include ./partials/scripts %>
</body>

</html>